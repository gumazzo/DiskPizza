@using DiskPizza.Models
@model Usuario
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Take Pizza</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-5" id="camposLogin">
                <form action="@Url.Action("Entrar", "Login")" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                          <h3 class="text-center">LOGIN</h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, "E-mail :", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "EX. exemplo@hotmail.com" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control-label text-center" })
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <a href=@Url.Action("Index", "Inicio")>
                                <input type="button" class="btn btn-primary" value="Voltar" />
                            </a>
                            <input type="submit" class="btn btn-primary" value="Entrar" />

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>