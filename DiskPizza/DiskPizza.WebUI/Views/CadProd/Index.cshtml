@using DiskPizza.Models
@model Produto
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Take Pizza</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form action="@Url.Action("Salvar","CadProd")" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2">
                            <img src="~/Imagens/pizza.jpg" alt="" class="img-thumbnail">
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>NOME DA PIZZARIA</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <h3>CADASTRAR PRODUTO</h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Nome, "Nome da pizza:", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.LabelFor(m => m.Tipo, "Tipo da Pizza:", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                            <a href="@Url.Action("Index","ListProd")" class="btn btn-default">Cancelar</a>
                        </div>
                    </div>




                </form>
            </div>
        </div>
    </div>
</body>
</html>
