@using DiskPizza.Models

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Produto item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Tipo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-right">
        <a href="@Url.Action("Index","CadProd")" class="btn btn-primary">Novo Produto</a>
    </div>
</div>
