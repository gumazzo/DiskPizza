@using DiskPizza.Models
@model CartaoDeCredito
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="@Url.Action("FazerPgto", "Pagamento")" class="form-horizontal">
            @Html.HiddenFor(m => m.Pedido.Id)
            <div class="form-group">
                <div class="col-md-12">
                    <h3 class="text-center">PAGAMENTO</h3>
                </div>
            </div>
            @if (!string.IsNullOrWhiteSpace(ViewBag.ErroMsg))
            {
                <div class="form-group ">
                    <div class="col-md-12 text-center">
                        <div class="alert alert-danger" role="alert">
                            <strong>@ViewBag.ErroMsg</strong>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group ">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.NomeDoTitular, "Nome do Titular:", new { @class = "control-label text-center" })
                    @Html.TextBoxFor(m => m.NomeDoTitular, new { @class = "form-control", @maxlength = 16 })
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.NumeroCartao, "Número do Cartão:", new { @class = "control-label text-center" })
                    @Html.TextBoxFor(m => m.NumeroCartao, new { @class = "form-control", @maxlength = 16 })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.ValidadeCartao, "Validade do Cartão:", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.ValidadeCartao, new { @class = "form-control", @maxlength = 4 })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.CodVerCartao, "Código de Verificação (CVC):", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.CodVerCartao, new { @class = "form-control", @maxlength = 3 })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary">Enviar pagamento</button>
                </div>
            </div>
        </form>
    </div>
</div>
