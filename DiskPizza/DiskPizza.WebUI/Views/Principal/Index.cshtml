@using DiskPizza.Models
@model Usuario
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Take Pizza</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12 text-right">
                        <a href="@Url.Action("Index", "Inicio")">Sair</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <img src="~/Imagens/pizza.jpg" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Pizza Hut</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Distancia: </label>
                                <label>Tempo de entrega: </label>
                                <label>Taxa de entrega:</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-12">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="@Url.Action("Index", "Principal")">Cardápio</a>
                            <a href="@Url.Action("Index", "Informacoes")">Informações</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @* Colocar uma tabela aqui, mas nao sei como *@
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Pizza Doces</th>
                                        <th>Pizza Tradicional</th>
                                        <th>Pizza Especial</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                        <td>Coluna 3</td>
                                    </tr>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                        <td>Coluna 3</td>
                                    </tr>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                        <td>Coluna 3</td>
                                    </tr>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                        <td>Coluna 3</td>
                                    </tr>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                        <td>Coluna 3</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <a href=@Url.Action("Index", "Pagamento")>
                                <input type="button" class="btn btn-primary" value="Pagar"; return true;" />
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</html>
