                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <a href=@Url.Action("Index", "Pagamento")>
                                <input type="button" class="btn btn-primary" value="Pagar" ; return true;" />
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</html>
