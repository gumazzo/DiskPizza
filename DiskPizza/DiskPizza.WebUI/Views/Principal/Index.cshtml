@using DiskPizza.Models
@model Produto

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Take Pizza</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal">
                   
                    <div class="form-group">
                        <div class="col-md-2">
                            <img src="~/Imagens/pizza.jpg" alt="" class="img-thumbnail">
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label>Pizza Hut</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Distancia: </label>
                                <label>Tempo de entrega: </label>
                                <label>Taxa de entrega:</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <h3>Meu pedido</h3>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Tamanho:</label>
                            <input id="broto" type="radio" name="tamanho" /> Broto
                            <input id="media" type="radio" name="tamanho" /> Média
                            <input id="grande" type="radio" name="tamanho" /> Grande
                            <input id="gigante" type="radio" name="tamanho" /> Gigante
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Quantidade de sabores:</label>
                            <input id="sabor1" type="radio" disabled="disabled" name="sabores" /> 1
                            <input id="sabor2" type="radio" disabled="disabled" name="sabores" /> 2
                            <input id="sabor3" type="radio" disabled="disabled" name="sabores" /> 3
                            <input id="sabor4" type="radio" disabled="disabled" name="sabores" /> 4
                        </div>
                    </div>

                    <div id="cardapio" class="form-group" style="display: none;">
                        <div class="col-md-12">
                            @* Colocar uma tabela aqui, mas nao sei como *@
                            @foreach (var tipo in (List<String>)ViewBag.Tipos)
                            {
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>@tipo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pizza in ((List<Produto>)ViewBag.Pizzas).Where(o => o.Tipo == tipo))
                                        {
                                            <tr>
                                                <td>
                                                    @pizza.Nome
                                                    <a class="lnkAdd" href="#">
                                                        <span class="glyphicon glyphicon-plus" aria-hidden="true" style="padding-left: 15px;"></span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>

                    <hr />

                    <div id="pedido" class="form-group" style="display: none;">
                        <div class="col-md-12">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Pizza</th>
                                        <th>Valor (R$)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                    </tr>
                                    <tr>
                                        <td>Coluna 1</td>
                                        <td>Coluna 2</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="col-md-12 text-right">
                                TOTAL: R$ 100,00
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 text-right">
                            <a href=@Url.Action("Index", "Pagamento")>
                                <input type="button" class="btn btn-primary" value="Pagar" ; return true;" />
                            </a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#broto").change(function () {
                $("#sabor1").removeAttr("checked");
                $("#sabor2").removeAttr("checked");
                $("#sabor3").removeAttr("checked");
                $("#sabor4").removeAttr("checked");
                $("#cardapio").hide();
                $("#pedido").hide();

                $("#sabor1").removeAttr("disabled");
                $("#sabor2").removeAttr("disabled");
                $("#sabor3").attr("disabled", "disabled");
                $("#sabor4").attr("disabled", "disabled");
            });

            $("#media").change(function () {
                $("#sabor1").removeAttr("checked");
                $("#sabor2").removeAttr("checked");
                $("#sabor3").removeAttr("checked");
                $("#sabor4").removeAttr("checked");
                $("#cardapio").hide();
                $("#pedido").hide();

                $("#sabor1").removeAttr("disabled");
                $("#sabor2").removeAttr("disabled");
                $("#sabor3").removeAttr("disabled");
                $("#sabor4").attr("disabled", "disabled");
            });

            $("#grande").change(function () {
                $("#sabor1").removeAttr("checked");
                $("#sabor2").removeAttr("checked");
                $("#sabor3").removeAttr("checked");
                $("#sabor4").removeAttr("checked");
                $("#cardapio").hide();
                $("#pedido").hide();

                $("#sabor1").removeAttr("disabled");
                $("#sabor2").removeAttr("disabled");
                $("#sabor3").removeAttr("disabled");
                $("#sabor4").attr("disabled", "disabled");
            });

            $("#gigante").change(function () {
                $("#sabor1").removeAttr("checked");
                $("#sabor2").removeAttr("checked");
                $("#sabor3").removeAttr("checked");
                $("#sabor4").removeAttr("checked");
                $("#cardapio").hide();
                $("#pedido").hide();

                $("#sabor1").removeAttr("disabled");
                $("#sabor2").removeAttr("disabled");
                $("#sabor3").removeAttr("disabled");
                $("#sabor4").removeAttr("disabled");
            });

            $('[id^=sabor]').change(function () {
                $("#cardapio").show();
            });

            $("a.lnkAdd").click(function () {
                $("#pedido").show();
            });
        });
    </script>
</body>
</html>
