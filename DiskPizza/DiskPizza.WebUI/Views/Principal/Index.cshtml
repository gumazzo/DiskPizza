            <form class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12 text-right">
                        <a href="@Url.Action("LogOff", "Login")">Sair</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2">
                        <img src="~/Imagens/pizza.jpg" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Pizza Hut</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Distancia: </label>
                                <label>Tempo de entrega: </label>
                                <label>Taxa de entrega:</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-12">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="@Url.Action("Index", "Principal")">Cardápio</a>
                            <a href="@Url.Action("Index", "Informacoes")">Informações</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
