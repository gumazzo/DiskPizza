@using DiskPizza.Models
@model List<Pedido>
@{
    ViewBag.Title = "MeusPedidos";
}
<div class="row">
    <div class="col-md-12">
        <h3>Meus pedidos</h3>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Status</th>
                        <th>Rua</th>
                        <th>Número</th>
                        <th>CEP</th>
                        <th>Qtd de Sabores</th>
                        <th>Valor Total (R$)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pedido in Model)
                    {
                        <tr>
                            <td>@string.Format("{0:dd/MM/yyyy HH:mm}", pedido.Data)</td>
                            <td>@pedido.Status</td>
                            <td>@pedido.Rua</td>
                            <td>@pedido.Numero</td>
                            <td>@pedido.Cep</td>
                            <td>@string.Format("{0:N0}", pedido.QtdSabores)</td>
                            <td>@string.Format("{0:C2}", pedido.ValorTotal)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>