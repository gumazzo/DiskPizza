@using DiskPizza.Models
@model Pedido
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Take Pizza</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/Inicio.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></snoicript>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="form-group" id="Links">
                <div class="col-md-12">
                    <a href="@Url.Action("Index", "Cadastro")">Cadastrar</a> | <a href="@Url.Action("Index", "Login")">Logar</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-3 col-md-5" id="camposInicio">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h3 class="text-center">COMO TE ENCONTRAR?</h3>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-9">
                            @Html.LabelFor(m => m.Cep, "CEP", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Cep, new { @id = "txtCEP", @class = "form-control", @placeholder = "EX. 00000-000" })
                        </div>
                        <div class="col-md-3 text-right">
                            <br />
                            <a href="#" class="lnkEndereco">
                                <input type="button" class="btn btn-primary" value="Buscar" />
                            </a>
                        </div>
                    </div>
                    <div class="form-group" style="display:none;" id="endereco">
                        <div class="col-md-9">
                            @*Deve ser colocado a rua automaticamente quando for pesquisado o cep*@
                            @Html.LabelFor(m => m.Rua, "Rua:", new { @class = "control-label text-center" })
                            @Html.TextBoxFor(m => m.Rua, new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.NumeroL, "Número:", new { @class = "control-label text-center" })
                            @Html.TextBoxFor(m => m.NumeroL, new { @class = "form-control", @placeholder = "EX. 00" })
                        </div>
                    </div>
                    <div class="form-group" id="buttonEntrar" style="display:none">
                        <div class="col-md-12 text-right">
                            <a href=@Url.Action("Index", "Informacoes")>
                                <input type="button" class="btn btn-primary" value="Entrar" />
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/Scripts/meiomask.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#txtCEP").setMask("cep");
        });

        $("a.lnkEndereco").click(function () {
            $("#endereco").show();
            $("#buttonEntrar").show();
        });
    </script>   
</body>
</html>
